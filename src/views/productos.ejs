<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Productos</title>
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet">
</head>
<body class="gradient-bg">

  <div>
    <h1>Productos</h1>
    <a type="button" class="btn btn-info m-3 p-3" href="/">Volver al inicio</a>

    <form action="/api/productos" method="POST" id="form-producto" class="p-3">
      <div>
        <label for="nombre" class="form-label">Nombre del Producto</label>
        <input type="text" id="nombre" name="nombre" class="form-control" placeholder="Nombre" required>
      </div>
      <div>
        <label for="precio" class="form-label">Precio</label>
        <input type="number" id="precio" name="precio" class="form-control" placeholder="0.00" min="0" step="0.01" required>
      </div>
      <div>
        <label for="stock" class="form-label">Stock Inicial</label>
        <input type="number" id="stock" name="stock" class="form-control" placeholder="0" min="0" step="1" required>
      </div>
      <div class="d-grid">
        <button type="submit" class="btn btn-primary mt-3">Agregar</button>
      </div>
    </form>

    <table class="table table-success">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Precio</th>
          <th>Stock</th>
          <th></th>
        </tr>
      </thead>
      <tbody id="tabla-productos">
        <% if (productos && productos.length) { %>
          <% productos.forEach(producto => { %>
            <tr data-id="<%= producto.id %>">
              <td><%= producto.id %></td>
              <td><%= producto.nombre %></td>
              <td>$<%= producto.precio.toFixed(2) %></td>
              <td><%= producto.stock %></td>
              <td>
                <button type="button" class="eliminar-producto">Eliminar</button>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5">No hay productos</td>
          </tr>
        <% } %>
      </tbody>
    </table>
    <script src="/js/form-producto.js"></script>
    <script src="/js/productos.js"></script>
  </div>
</body>
</html>
