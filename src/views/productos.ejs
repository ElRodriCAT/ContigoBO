<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Productos</title>
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet">
</head>
<body>

  <div>
    <h1>Productos</h1>
    <a type="button" class="btn btn-info" href="/">Volver al inicio</a>

    <form action="/api/productos" method="POST" id="form-producto">
      <div>
        <div>
          <label>Nombre del Producto</label>
          <input type="text" name="nombre" placeholder="Nombre" required>
        </div>
        <div>
          <label>Precio</label>
          <input type="number" name="precio" placeholder="0.00" min="0" step="0.01" required>
        </div>
        <div>
          <label>Stock Inicial</label>
          <input type="number" name="stock" placeholder="0" min="0" step="1" required>
        </div>
        <div>
          <button type="submit">Agregar</button>
        </div>
      </div>
    </form>

    <table class="table table-success table-striped-columns">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nombre</th>
          <th scope="col">Precio</th>
          <th scope="col">Stock</th>
          <th></th>
        </tr>
      </thead>
      <tbody id="tabla-productos">
        <% if (productos && productos.length) { %>
          <% productos.forEach(producto => { %>
            <tr data-id="<%= producto.id %>">
              <td><%= producto.id %></td>
              <td><%= producto.nombre %></td>
              <td>$<%= producto.precio.toFixed(2) %></td>
              <td><%= producto.stock %></td>
              <td>
                <button type="button" class="eliminar-producto">Eliminar</button>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5">No hay productos</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <script src="/js/form-producto.js"></script>
  <script src="/js/productos.js"></script>
</body>
</html>
